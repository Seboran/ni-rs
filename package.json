{
  "name": "@seboran/ni",
  "type": "module",
  "version": "0.2.9",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/Seboran/ni-rs.git"
  },
  "packageManager": "pnpm@^8.0.0",
  "files": [
    "npm/dist",
    "npm/bin"
  ],
  "bin": {
    "ni": "npm/bin/ni",
    "na": "npm/bin/na",
    "nr": "npm/bin/nr",
    "nrm": "npm/bin/nrm"
  },
  "scripts": {
    "init:dist": "mkdir npm/dist/linux && mkdir npm/dist/windows && mkdir npm/dist/apple",
    "compile": "./cross-build.sh",
    "cp:build:linux": "cp target/x86_64-unknown-linux-gnu/release/na target/x86_64-unknown-linux-gnu/release/ni target/x86_64-unknown-linux-gnu/release/nr target/x86_64-unknown-linux-gnu/release/nrm npm/dist/linux",
    "cp:build:apple": "cp target/aarch64-apple-darwin/release/na target/aarch64-apple-darwin/release/ni target/aarch64-apple-darwin/release/nr target/aarch64-apple-darwin/release/nrm npm/dist/apple",
    "cp:build:windows": "cp target/x86_64-pc-windows-gnu/release/na.exe target/x86_64-pc-windows-gnu/release/ni.exe target/x86_64-pc-windows-gnu/release/nr.exe target/x86_64-pc-windows-gnu/release/nrm.exe npm/dist/windows",
    "cp:build": "pnpm cp:build:linux && pnpm cp:build:windows",
    "build": "pnpm compile && pnpm cp:build",
    "link:local": "cd npm && bun link",
    "compile:old": "cargo build --workspace --bins -r && cp target/release/na target/release/ni target/release/nr target/release/nrm npm/dist"
  },
  "workspaces": [
    "npm"
  ]
}
